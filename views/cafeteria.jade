extends ./layout.jade

block css-include
    style.
        .carousel-inner > .item > img, 
        .carousel-inner > .item > a > img{
            width: auto; /* use this, or not */
            margin: auto;
        }

block fstContent
    #carouselIndiv.carousel.slide(data-ride='carousel')
      // Indicators
      ol.carousel-indicators
        -var index = 0
        each img in images 
            if index++ == 0
                li.active(data-target='#carouselIndiv', data-slide-to='0')
            else 
                li(data-target='#carouselIndiv', data-slide-to='#{index - 1}')
      // Wrapper for slides
      .carousel-inner(role='listbox')
        -var index = 0
        each img in images 
            if index++ == 0
                .item.active
                    img(src=''+img, alt='...')
            else
                .item
                    img(src=''+img, alt='...')
      // Controls
      a.left.carousel-control(href='#carouselIndiv', role='button', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
        |     
        span.sr-only Previous
      |   
      a.right.carousel-control(href='#carouselIndiv', role='button', data-slide='next')
        span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
        |     
        span.sr-only Next


block sndContent
   h3=header 
   pre=detail
   h6=time
